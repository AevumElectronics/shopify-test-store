  "name": "product-info-accordion",
  "tag": "section",
  "class": "section",
  "templates": [
    "product"
  ],
  "presets": [
    {
      "name": "Product Info Accordion"
    }
  ],
  "settings": [
      {
        "type": "color",
        "id": "front_color",
        "label": "Front Color",
        "default": "#fbfbfd"
      },
      {
        "type": "color",
        "id": "back_color",
        "label": "Back Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "back_color",
        "label": "Back Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "box_color",
        "label": "Box Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "details_color",
        "label": "Details Color",
        "default": "#292524"
